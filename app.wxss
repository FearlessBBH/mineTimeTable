/**app.wxss**/

view, .flex{
  display: flex;
}
.container {
  display: flex;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.container > .head{
  display: flex;
  position: relative;
   width: 100%;
   height: 233rpx;
   flex-direction: column;
}
.container > .head > image,
.bottomNav .bg_nav,
.card > image {
  position: absolute;
  width: 100%;
  height:  100%;
  z-index: -999;
}
/* 大部分头部（仅头像+昵称） */
.container > .head > .item{
  display: flex;
  margin-top: 27rpx;
  width: 100%;
  height: 130rpx;
  align-items: center;
}
.container > .head > .item > image{
  margin-left: 63rpx;
  width: 130rpx;
  height: 130rpx;
  background-color: #fff;
  border-radius: 50%;
}
.container > .head > .item > text{
  margin-left: 30rpx;
  width: 349rpx;
  font-size: 32.8rpx;
  color: #fff;
}
.container > .head > .item > .title{
  display: flex;
  width: 137rpx;
  height: 38rpx;
  font-size: 24rpx;
  justify-content: center;
  font-weight: 500;
  color: #fff;
  border-radius: 19rpx;
  background: linear-gradient(56deg, #FFD954, #FFC151);
  box-shadow: 0 2rpx 5rpx 0 rgba(255, 172, 0, 0.3);
}
.bottomNav{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height:146rpx;
  justify-content: space-around;
  align-items: center;
}
.bottomNav .btn_add{
  display: flex;
  position: absolute;
  bottom:35rpx;
  width: 107rpx;
  height: 107rpx;
}
.bottomNav .item{
  display: flex;
  margin-top: 60rpx;
  width: 46rpx;
  min-height: 73rpx;
  max-height: 83rpx;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.bottomNav .item image{
  max-width: 46rpx;
  height: 42rpx;
}
.bottomNav .item text{
  width: 100%;
  font-size: 20rpx;
  color:#fff;
  text-align: center;
}
.column{
  display: flex;
  width: 691rpx;
}
.item{
  display: flex;
  width: 100%;
}

/* 接送选项卡 */
.card{
  display: flex;
  position: relative;
  margin-top: 26rpx;
  height: 195rpx;
  justify-content: center;
}
.card > image{
  top:-6rpx;
  left: -6rpx;
  width: 706rpx;
  height: 211rpx;
}
.card .left{
  display: flex;
  margin-left: 80rpx;
  width: 310rpx;
  height: 100%;
  flex-direction: column;
  justify-content: center;
}
.card .left text:nth-child(1), .card .left > view:nth-child(1){
  font-size: 32rpx;
  color: #ccc;
}
.card .left text:nth-child(2), .card .left > view:nth-child(2){
  margin:24rpx 0;
  font-size: 28rpx;
  color: #222;
}
.card .left view{
  display: flex;
  font-size: 24rpx;
  color: #9A9A9A;
  align-items: center;
}
.card .left view image{
  margin-right: 15rpx;
  width: 18rpx;
  height: 18rpx;
}
.card .right{
  display: flex;
  width: 256rpx;
  height: 100%;
  justify-content: flex-end;
  flex-wrap: wrap;
}
.card .right .state{
  display: flex;
  padding:0 20rpx;
  margin-top: 20rpx;
  min-width: 76rpx;
  height: 42rpx;
  border: 1px solid #ccc;
  border-top-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  font-size: 22rpx;
  justify-content: center;
  align-items: center;
}
/* 课程提示状态字色样式 */
.card .right .grey{
  border-color: #ccc;
  color: #ccc;
  background-color: #F0F0F0;
}
.card .right .yellow{
  border-color: #FFC252;
  color: #FFC252;
  background-color: #FFF7ED;
}
.card .right .red{
  border-color: #FF6666;
  color: #FF6666;
  background-color: #FFEDEE;
}
/* 样式结束 */
.card .right .bottom{
  display: flex;
  width: 100%;
  height: 76rpx;
  justify-content: flex-end;
}
.card .right .bottom > image{
  margin-right:20rpx;
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
}
.card .right .bottom > image:nth-child(1){
  margin-right: 44rpx;
}
.card .right .bottom .center{
  display: flex;
  margin: 0 6rpx;
  width: 74rpx;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  display: none;
}
.card .right .bottom .center text{
  font-size: 18rpx;
  color: #9A9A9A;
  text-align: center;
}
.card .right .bottom .center image{
  width: 100%;
  height: 11rpx;
}
.card .right .had{
  justify-content: center;
}
.card .right .had > image,
.card .right .had > image:nth-child(1){
  margin-right: 0;
}
.card .right .had .center{
  display: flex;
}

/* 卡片背景对应的相应字色 */
.bggrey .left text:nth-child(1){
  color: #ccc;
}
.bggreen .left text:nth-child(1),
.bgyellow .left text:nth-child(1){
  color: #6DD7C1;
}

/* 名片式选项卡 */
.visitorCard{
  display: flex;
  margin-left: 20rpx;
  height: 110rpx;
  border: 1px solid #FFC251;
  border-radius: 19rpx;
  /* background-color: #e0e0e0; */
  justify-content: space-around;
  align-items: center;
}
