/* pages/person/notice/notices.wxss */
.card{
  flex-direction: column;
  justify-content: space-evenly;
  align-items: flex-end;
}
.card .title{
  margin-top: 10rpx;
  width: 620rpx;
  height: 40rpx;
  align-items: flex-end;
}
.card .title text{
  margin-left: 20rpx;
  font-size: 26rpx;
  font-weight: bold;
}
.card .content{
  width: 90%;
  font-size: 24rpx;
  color: #ccc;
}
.card .bottom{
  width: 90%;
  height: 52rpx;
  justify-content: space-between;
  align-items: baseline;
}
.card .bottom text{
  font-size: 24rpx;
  color: #ccc;
}
.card .bottom .btn{
  margin-right: 20rpx;
  width: 136rpx;
  height: 40rpx;
  font-size: 22rpx;
  border: 1px solid #ccc;
  border-radius: 29rpx;
  background-color: #FFC252;
  justify-content: center;
  align-items: center;
}
.card .bottom .on{
  background-color: #F0F0F0;
}