.van-cell {
  padding: 0 !important;
  width: 600rpx !important;
  height: 100% !important;
}

.van-cell_title {
  flex-direction: column !important;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}


/* 页面样式 */
.column {
  width: 750rpx;
  /* padding-left: 35rpx; */
}

.list {
  margin-top: 20rpx;
}

.list image {
  margin: 0 12rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
}

.btn {
  margin-top: 90rpx;
  width: 638rpx;
  height: 84rpx;
  background: linear-gradient(117deg, #63CB96, #2FC5A5);
  box-shadow: 0px 3px 10px 0px rgba(47, 197, 165, 0.45);
  border-radius: 42px;
  font-size: 36rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}
