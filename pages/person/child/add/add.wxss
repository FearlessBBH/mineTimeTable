/* pages/person/child/add/add.wxss */
.uploadImg {
  position: relative;
  height: 320rpx;
  justify-content: center;
  align-items: center;
}

.uploadImg image {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #222;
  border-radius: 50%;
}

.uploadImg .icon {
  position: absolute;
  top: 60%;
  left: 55%;
}

.inputList {
  height: auto;
  box-shadow: 1px 14rpx 16rpx 0 rgba(17, 147, 112, 0.07);
  border-radius: 14rpx;
  flex-direction: column;
}

.title {
  margin-top: 60rpx;
  font-size: 30rpx;
}

.choose {
  margin-top: 20rpx;
  flex-wrap: wrap;
  height: auto;
}

.choose .item {
  margin: 0 20rpx 20rpx 0;
  width: 213rpx;
  height: 66rpx;
  font-size: 26rpx;
  border-radius: 33rpx;
  border: 1px solid #FF9D51;
  justify-content: center;
  align-items: center;
}

.choose .item:nth-child(3n+3){
  margin:0;
}

.choose .on{
  background-color: #ff8200;
}

.btn{
  margin-top: 90rpx;
  width: 600rpx;
  height: 70rpx;
  background-color: #02A7F0;
  border-radius: 35rpx;
  font-size: 32rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}