/* pages/person/child/add/add.wxss */
.uploadImg {
  position: relative;
  height: 320rpx;
  justify-content: center;
  align-items: center;
}

.uploadImg image {
  width: 160rpx;
  height: 160rpx;
  border: 1px solid #222;
  border-radius: 50%;
}

.uploadImg .icon {
  position: absolute;
  top: 60%;
  left: 55%;
}

.inputList {
  height: auto;
  box-shadow: 1px 14rpx 16rpx 0 rgba(17, 147, 112, 0.07);
  border-radius: 14rpx;
  flex-direction: column;
}

.title {
  margin-top: 60rpx;
  font-size: 30rpx;
}

.choose {
  margin-top: 20rpx;
  flex-wrap: wrap;
  height: auto;
}

.choose .item {
  margin: 0 20rpx 20rpx 0;
  width: 213rpx;
  height: 66rpx;
  font-size: 28rpx;
  border-radius: 33rpx;
  border: 1px solid #E7E7E7;
  justify-content: center;
  align-items: center;
}

.choose .item:nth-child(3n+3){
  margin:0;
}

.choose .on{
  background-color: #FFC600;
  border: 1px solid #FFC600;
  color: #fff;
}

.btn{
  margin-top: 90rpx;
  width: 638rpx;
  height: 84rpx;
  font-size: 36rpx;
  color: #fff;
  background: linear-gradient(117deg, #63CB96, #2FC5A5);
  box-shadow: 0px 3px 10px 0px rgba(47, 197, 165, 0.45);
  border-radius: 42px;
  justify-content: center;
  align-items: center;
}