/* pages/person/person.wxss */
.list:last-child {
  margin-bottom: 180rpx;
}

.column {
  margin-top: 40rpx;
  width: 670rpx;
  min-height: 110rpx;
  box-shadow: 1rpx 14rpx 16rpx 0 rgba(17, 147, 112, 0.07);
  border-radius: 14rpx 14rpx 14rpx 14rpx;
  flex-direction: column;
  align-items: center;
}

.list .item {
  width: 602rpx;
  height: 109rpx;
  border-top: 1px solid #EBEFF9;
  justify-content: space-between;
  align-items: center;
}

.list .item:first-child {
  border: none;
}

.list .item image:first-child {
  width: 52rpx;
}

.list .item image:last-child {
  width: 18rpx;
}

.list .item text {
  width: 420rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #4d4d4d;
}