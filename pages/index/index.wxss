/**index.wxss**/
view {
  display: block;
}

.head {
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 233rpx;
  flex-direction: column;
  z-index: 99;
}

.head>image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -999;
}

/* 表头 */
.head .center {
  display: flex;
  margin-top: 34rpx;
  width: 100%;
  height: 67rpx;
  justify-content: flex-end;
}

.head .center image {
  margin-right: 13rpx;
  width: 67rpx;
  height: 67rpx;
}

.head .center image:nth-child(2) {
  margin-right: 22rpx;
}

.head .bottom {
  width: 100%;
  height: auto;
}

/* 日历界面 */
.day {
  display: flex;
  height: 287rpx !important;
}

.day .bottom {
  /* display: flex; */
  justify-content: center;
}

.day .bottom .item {
  display: flex;
  position: relative;
  margin-top: 33rpx;
  width: 554rpx;
  height: 92rpx;
  border-radius: 46rpx;
  background-color: #ECFAF6;
  align-items: center;
  /* justify-content: center; */
  overflow-x: hidden;
}
.day .bottom .item .scroll{
  width: 97%;
  height: 92rpx;
  border-radius: 46rpx;
}
.day .bottom .item text {
  margin: 0 14rpx;
  padding: 15rpx 20rpx;
  width: 46rpx;
  height: 59rpx;
  line-height: 34rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: #3EC7A1;
  letter-spacing: 2rpx;
  border-radius: 50%;
  white-space: wrap;
  z-index: 3;
}

.day .bottom .item text.active {
  color: #fff;
  background: linear-gradient(90deg, #FFD954, #FFC151);
}

.day .bottom image {
  position: absolute;
  top: 120rpx;
  width: 111rpx;
  height: 111rpx;
}

/* 月历界面 */
.month {
  height: 697rpx !important;
  align-items: center;
}

.month .bottom {
  margin-top: 8rpx;
  width: 660rpx;
  height: 530rpx;
  overflow-y: hidden;
}

.calendar {
  --calendar-height: 530rpx;
  height: 530rpx;
}

.van-calendar {
  background-color: transparent !important;
}

.van-calendar__header {
  box-shadow: none !important;
}

.van-calendar__header-subtitle,
.van-calendar__weekday,
.van-calendar__month-title {
  font-weight: bold !important;
  color: #fff !important;
}

.van-calendar__day--disabled {
  color: #fff !important;
}

.van-calendar__selected-day {
  width: 74rpx !important;
  height: 74rpx !important;
  border-radius: 50% !important;
}

/* 小贴士 */
.tips,
.invite {
  display: flex;
  height: 58rpx;
  border-radius: 28.5rpx;
  border: 1px solid #39C6A2;
  color: #EDFAF7;
  background-color: #EBF9F6;
  align-items: center;
}

.tips image,
.invite image {
  margin-left: 22rpx;
  width: 37rpx;
  height: 37rpx;
}

.tips text {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #33C5A4;
}

/* 邀请提示 */
.invite {
  display: flex;
  margin-top: 45rpx;
  margin-bottom: 160rpx;
  border-color: #FFC762;
  background-color: #FFF7ED;
}

.invite image:nth-child(1) {
  margin: 0 38rpx;
}

.invite text:nth-child(2) {
  font-size: 28rpx;
  color: #FFC151;
}

.invite text:nth-child(3) {
  margin-left: 27rpx;
  font-size: 20rpx;
  color: #999;
}

.invite image:last-child {
  margin-left: 126rpx;
  width: 22rpx;
  height: 22rpx;
}