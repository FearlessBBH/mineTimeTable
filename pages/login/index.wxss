/* pages/login/index.wxss */
.addNew {
  margin-top: 30rpx;
  height: 60rpx;
  align-items: center;
}

.addNew>image {
  margin-right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  border: none;
}

.addNew>text {
  font-size: 30rpx;
  font-weight: bold;
  color: #32C5A4;
}

.title {
  margin-top: 10rpx;
  height: 60rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #32C5A4;
  align-items: center;
}

.radio {
  padding-left: 30rpx;
  width: 661rpx;
  height: 800rpx;
}

.radio .van-radio {
  position: relative;
  margin: 20rpx 0;
  width: 100%;
  height: 150rpx;
}

.radio .van-radio image {
  width: 550rpx;
  height: 150rpx;
}
.radio .van-radio text{
  position: absolute;
  top: 38%;
  left: 18%;
  font-size: 40rpx;
}
.btn_Big {
  display: flex;
  margin: 60rpx 0;
  height: 80rpx;
  justify-content: center;
}

.btn_Big view {
  display: flex;
  width: 560rpx;
  height: 100%;
  font-size: 36rpx;
  color: #fff;
  background: linear-gradient(117deg, #63CB96, #2FC5A5);
  box-shadow: 0px 3px 10px 0px rgba(47, 197, 165, 0.45);
  border-radius: 42px;
  justify-content: center;
  align-items: center;
}

/* popup */
.popup {
  padding: 0 30rpx;
  width: 540rpx;
  height: 300rpx;
  flex-direction: column;
}

.popup .top {
  height: 90rpx;
  align-items: center;
}

.popup .center {
  margin-top: 10rpx;
  height: 60rpx;
  align-items: center;
}

.popup .center>input {
  width: 60%;
}

.popup .bottom {
  margin-top: 50rpx;
  height: 62rpx;
  justify-content: space-evenly;
  align-items: center;
}

.popup .bottom>view {
  width: 200rpx;
  height: 100%;
  font-size: 32rpx;
  color: #fff;
  border-radius: 31rpx;
  background: linear-gradient(117deg, #63CB96, #2FC5A5);
  box-shadow: 0px 3px 6px 0px rgba(47, 197, 165, 0.45);
  justify-content: center;
  align-items: center;
}