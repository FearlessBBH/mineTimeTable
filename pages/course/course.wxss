/* 搜索框 */
.search {
  padding: 0 30rpx;
  margin-top: 20rpx;
  width: 630rpx;
  height: 72rpx;
  background-color: #FFF7ED;
  border: 1px solid #FFC151;
  border-radius: 36rpx;
  box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.1);
  justify-content: space-around;
  align-items: center;
}

.search>input {
  width: 90%;
  height: 100%;
  font-size: 24rpx;
  color: #FFC151;
}

.search>image {
  width: 32rpx;
  height: 32rpx;
}