/* pages/course/edit/edit.wxss */
view {
  display: block;
}

.timed {
  display: flex;
  height: 90rpx;
  justify-content: space-between;
  align-items: center;
}

.timed text {
  font-size: 30rpx;
  color: #222;
}

.timed .picker {
  display: flex;
  width: 140rpx;
  height: 50rpx;
  font-size: 24rpx;
  color: #aaa;
  justify-content: center;
  align-items: center;
  border: 1px solid #e7e7e7;
  border-radius: 4px;
}

.tab {
  display: flex;
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid #e7e7e7;
  align-items: center;
}

.tab text {
  margin: 0 32rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #999;
  border-bottom: 3rpx solid transparent;
}

.tab .on {
  font-weight: bold;
  color: #32C5A4;
  border-bottom: 3rpx solid #32C5A4;
}

.list {
  display: flex;
  margin-top: 20rpx;
  height: auto;
  flex-wrap: wrap;

}

.list view {
  display: flex;
  margin: 9rpx 5rpx;
  width: 160rpx;
  height: 82rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  border-radius: 41rpx;
  border: 1px solid #E7E7E7;
  justify-content: center;
  align-items: center;
}

.list .on {
  background-color: #FFC600;
  border: 1px solid #FFC600;
  color: #fff;
}

/* calender */
.calArea {
  height: 830rpx;
}

.calender {
  width: 100%;
  --calendar-height: 500px;
}

.btn_Big {
  display: flex;
  margin: 60rpx 0;
  height: 80rpx;
  justify-content: center;
}

.btn_Big view {
  display: flex;
  width: 560rpx;
  height: 100%;
  font-size: 36rpx;
  color: #fff;
  background: linear-gradient(117deg, #63CB96, #2FC5A5);
  box-shadow: 0px 3px 10px 0px rgba(47, 197, 165, 0.45);
  border-radius: 42px;
  justify-content: center;
  align-items: center;
}