/* pages/course/detail/details.wxss */
.times {
  margin-top: 30rpx;
  height: 52rpx;
  align-items: center;
}

.times .week {
  margin-right: 20rpx;
  width: 136rpx;
  height: 100%;
  line-height: 52rpx;
  font-size: 34rpx;
  color: #fff;
  background: linear-gradient(90deg, #63CB96, #2FC5A5);
  text-align: center;
  border-radius: 26rpx;
}

.times .date {
  width: 332rpx;
  font-size: 32rpx;
  font-weight: 400;
  text-indent: 14rpx;
  color: #222;
}

.times .btn {
  width: 220rpx;
  height: 52rpx;
  color: #fff;
  font-size: 30rpx;
  border-radius: 26px;
  align-items: center;
  justify-content: center;
  background: linear-gradient(90deg, #FFD954, #FFC151);
}

.times .btn>image {
  margin-right: 16rpx;
  width: 32rpx;
  height: 32rpx;
  border: none;
}

.collapse {
  position: relative;
  border: 1px solid #E7E7E7;
  border-radius: 16rpx;
  height: auto;
  /* flex-direction: columns; */
  flex-wrap: wrap;
}

.collapse icon.solid {
  position: absolute;
  top: 71rpx;
  left: 0;
  width: 9rpx;
  height: 76rpx;
  border-radius: 4rpx;
  background-color: #32C5A4;
}

.collapse icon.circle {
  display: block;
  position: absolute;
  top: 34rpx;
  left: 28rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  border: 7rpx solid rgba(40, 190, 160, 0.7) !important;
  background-color: #28BEA0;
}

.collapse .top {
  width: 100%;
  height: 195rpx;
  transition: height .5s;
  overflow-y: hidden;
}

.collapse .left {
  display: block;
  width: 395rpx;
  overflow-y: hidden;
}

.collapse .left>view:nth-child(1) {
  width: 366rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #6DD7C1;
}

.collapse .left>view {
  margin: 24rpx 0;
}

.collapse .right {
  width: 200rpx;
  height: 195rpx;
}

.collapse .bottom {
  margin: 10rpx 0;
  width: 100%;
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 1px;
  color: #32C5A4;
  justify-content: center;
  align-items: center;
}

.status {
  flex-direction: column;
}

.status .group {
  display: block;
}

.val {
  justify-content: flex-end;
}

/* popup */
.popup {
  width: 600rpx;
  border-radius: 16rpx;
  flex-direction: column;
}

.popup>.top {
  margin-top: 33rpx;
  padding: 0 36rpx;
  width: 530rpx;
  height: 32rpx;
  justify-content: space-between;
  align-items: center;
}

.popup>.top text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.popup>.btn {
  height: 62rpx;
  justify-content: space-evenly;
  align-items: center;
}

.popup>.btn view {
  width: 200rpx;
  height: 100%;
  font-size: 32rpx;
  color: #fff;
  border-radius: 31rpx;
  justify-content: center;
  align-items: center;
}

.popup .cancel {
  background: linear-gradient(117deg, #FFD954, #FFC151);
  box-shadow: 0px 3px 6px 0px rgba(255, 193, 81, 0.45);
}

.popup .enter {
  background: linear-gradient(117deg, #63CB96, #2FC5A5);
  box-shadow: 0px 3px 6px 0px rgba(47, 197, 165, 0.45);
}

/* 设置状态弹框 */
.status_p {
  height: 396rpx;
}

.status_p>.center {
  margin: 69rpx 0 84rpx;
  height: 64rpx;
  justify-content: center;
  align-items: center;
}

.status_p>.center text {
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.status_p>.center .picker {
  padding: 0 20rpx;
  width: 320rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
  justify-content: space-between;
  align-items: center;
  border: 1px solid #E7E7E7;
}

.status_p>.center .picker>image {
  width: 26rpx;
  height: 18rpx;
}

.status_p>.btn view {
  width: 200rpx;
}

/* 提醒时间弹框 */
.remind_p {
  min-height: 700rpx;
}

.remind_p>.center {
  margin: 40rpx 0;
  padding: 0 20rpx;
  width: 600rpx;
  min-height: 400rpx;
  flex-direction: column;
}

.remind_p>.center>.txt {
  margin-bottom: 20rpx;
  width: 100%;
  height: 60rpx;
  font-size: 24rpx;
  align-items: center;
}

.remind_p>.center>.txt text {
  margin: 0 16rpx;
  font-size: 24rpx;
  color: #222;
}

.remind_p>.center>.txt input {
  margin: 0 20rpx;
  width: 160rpx;
  height: 100%;
  text-align: center;
  font-size: 24rpx;
  border: 1px solid #ccc;
}

.remind_p>.center>.txt:nth-child(2) {
  color: #ccc;
}

.choose {
  margin-top: 20rpx;
  width: 600rpx;
  flex-wrap: wrap;
  height: auto;
}

.choose .item {
  margin: 0 15rpx 15rpx 0;
  width: 170rpx;
  height: 60rpx;
  font-size: 24rpx;
  border-radius: 33rpx;
  border: 1px solid#E7E7E7;
  justify-content: center;
  align-items: center;
}

.choose .item:nth-child(3n+3) {
  margin: 0;
}

/* 评论 */
.ltitle {
  padding: 0 32rpx;
  height: 74rpx;
  border-bottom: 1px solid #E7E7E7;
  align-items: center;
  justify-content: space-between;
}

.ltitle text {
  padding: 15rpx 0;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 2rpx solid #32C5A4;
}

.ltitle .issue {
  width: 180rpx;
  height: 50rpx;
  color: #32C5A4;
  font-size: 30rpx;
  font-weight: 500;
  justify-content: center;
  align-items: center;
}
.ltitle .issue>image{
  margin-right: 16rpx;
  width: 32rpx;
  height: 32rpx;
}
.linkup {
  margin-top: 26rpx;
  justify-content: space-between;
}

.linkup:last-child {
  margin-bottom: 60rpx;
}

.linkup>image {
  width: 88rpx;
  height: 88rpx;
  background-color: #e0e0e0;
  border-radius: 50%;
}

.linkup>.right,
.linkup>.right>.comment>.right {
  width: 588rpx;
  flex-direction: column;
}

.column>.right>.item {
  margin-top: 13rpx;
}

.linkup>.right>.title {
  margin-top: 16rpx;
  height: 32rpx;
  line-height: 32rpx;
  justify-content: space-between;
  align-items: baseline;
}

.linkup>.right>.title>text {
  color: #999;
  font-size: 28rpx;
}

.linkup>.right>.title>text:first-child {
  font-size: 32rpx;
  color: #222;
  font-weight: bold;
}

.linkup>.right>.title>text:last-child {
  width: 400rpx;
  font-size: 24rpx;
  text-align: right;
}

.linkup>.right>.content {
  font-size: 32rpx;
  /* font-weight: bold; */
  color: #222;
  letter-spacing: 2rpx;
}

.linkup>.right>.imglist {
  margin-top: 30rpx;
  flex-wrap: wrap;
}

.linkup>.right>.imglist>image {
  margin: 0 0 4rpx 4rpx;
  width: 187rpx;
  height: 188rpx;
  background-color: #e0e0e0;
}

.linkup>.right>.imglist>image:nth-child(3n-2) {
  margin-left: 0;
}

.linkup>.right>.tips {
  font-size: 24rpx;
  font-weight: 500;
  color: #22C69D;
}

.linkup>.right>.btns {
  margin-top: 29rpx;
  height: 30rpx;
  justify-content: space-between;
}

.linkup>.right>.btns>view {
  height: 100%;
}

.linkup>.right>.btns>view>image {
  max-width: 32rpx;
  height: 30rpx;
}

.linkup>.right>.btns>view>text {
  margin-left: 15rpx;
  font-size: 24rpx;
}

.linkup>.right>.comment {
  margin: 0;
  padding-top: 20rpx;
  justify-content: space-around;
  background-color: #F8F8F8;
  border-right: 1px solid #F2F2F2;
  border-left: 1px solid #F2F2F2;
}

.linkup>.right>.comment:nth-child(5) {
  margin-top: 22rpx;
  padding-top: 20rpx;
  border-top: 1px solid #F2F2F2;
  border-top-left-radius: 9rpx;
  border-top-right-radius: 9rpx;
}

.linkup>.right>.comment:last-child {
  border-bottom: 1px solid #F2F2F2;
  border-bottom-left-radius: 9rpx;
  border-bottom-right-radius: 9rpx;
}

.linkup>.right>.comment>image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #e0e0e0;
}

.linkup>.right>.comment>.right {
  width: 467rpx;
}

.linkup>.right>.comment>.right .title {
  height: 30rpx;
  line-height: 30rpx;
  align-items: baseline;
}

.linkup>.right>.comment>.right .title text {
  font-size: 24rpx;
  color: #9A9A9A;
}

.linkup>.right>.comment>.right .title text:first-child {
  margin-right: 21rpx;
  font-size: 28rpx;
  color: #222;
  font-weight: bold;
}

.linkup>.right>.comment>.right .content {
  margin: 20rpx 0;
  font-size: 24rpx;
  color: #222;
}

